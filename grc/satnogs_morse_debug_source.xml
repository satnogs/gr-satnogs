<?xml version="1.0"?>
<block>
	<name>Morse code Debug Source</name>
	<key>satnogs_morse_debug_source</key>
	<category>[SatNOGS]/Debug</category>
	<import>import satnogs</import>
	<make>satnogs.morse_debug_source($wpm, $debug_seq, $errors, $p, $seq_pause_ms)</make>
	
	<param>
		<name>WPM</name>
		<key>wpm</key>
		<value>20</value>
		<type>int</type>
	</param>

	<param>
		<name>Sentence</name>
		<key>debug_seq</key>
		<value>"HELLO WORLD"</value>
		<type>string</type>
	</param>

	<param>
		<name>Inject Errors</name>
		<key>errors</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Error probability</name>
		<key>p</key>
		<value>0.1</value>
		<type>real</type>
	</param>
	
	<param>
		<name>Sequence Pause (millis)</name>
		<key>seq_pause_ms</key>
		<value>1000</value>
		<type>int</type>
	</param>

	<source>
		<name>out</name>
		<type>message</type>
	</source>
</block>
